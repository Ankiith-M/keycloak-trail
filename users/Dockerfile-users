# ---- build ----
FROM node:22-alpine AS build
WORKDIR /app

# Install deps (reproducible)
COPY package*.json ./
RUN npm ci

# Copy source & build
COPY . .
RUN npm run build && npm prune --omit=dev

# ---- runtime ----
FROM node:22-alpine AS runtime
WORKDIR /app

# Create non-root user
RUN addgroup -g 1001 nodegrp && adduser -D -G nodegrp -u 1001 nodeusr

ENV NODE_ENV=production

# Copy only what is needed
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/dist ./dist

# (Optional) ensure ownership if your environment needs it
RUN chown -R nodeusr:nodegrp /app
USER nodeusr

# Users service listens on 3001
EXPOSE 3001

CMD ["node", "dist/main.js"]
